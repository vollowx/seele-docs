<!doctype html>
<html lang="{{ lang or 'en' }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes" />
    <title>{{ title or page.fileSlug }}</title>
    <meta name="description" content="{{ desc or 'Documentation of SEELE the web components library.' }}" />
    <meta name="keywords" content="seele, web components, documentation, components, library, ui, design system" />
    <meta name="author" content="Vollow" />

    <!-- hreflang alternate links for multi-language support -->
    {% set cleanUrl = page.url | replace('/en/', '/') | replace('/zh-Hans/', '/') | replace('/zh-Hant/', '/') %}
    <link rel="alternate" hreflang="en" href="https://vollowx.github.io/seele-docs/en{{ cleanUrl }}" />
    <link rel="alternate" hreflang="zh-Hans" href="https://vollowx.github.io/seele-docs/zh-Hans{{ cleanUrl }}" />
    <link rel="alternate" hreflang="zh-Hant" href="https://vollowx.github.io/seele-docs/zh-Hant{{ cleanUrl }}" />
    <link rel="alternate" hreflang="x-default" href="https://vollowx.github.io/seele-docs/en{{ cleanUrl }}" />

    <style>{% inlineCss "_middle/docs-web/build/client.css" %}</style>
    <script>
      try {
        const stored = localStorage.getItem("sw-theme-preference");
        const themeMode = stored === "light" || stored === "dark" || stored === "auto" ? stored : "auto";
        if (themeMode === "auto") {
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          document.documentElement.dataset["mdTheme"] = prefersDark ? "dark" : "light";
        } else {
          document.documentElement.dataset["mdTheme"] = themeMode;
        }
      } catch (e) {}

      try {
        const storedDir = localStorage.getItem("sw-direction-preference");
        document.documentElement.dir = (storedDir === "rtl" || storedDir === "ltr") ? storedDir : "ltr";
      } catch (e) {
        document.documentElement.dir = "ltr";
      }
    </script>
    <!-- MUST be loaded before any lit components to enable hydration -->
    <script type="module" src="/docs-web/build/lit-hydrate-support.js"></script>
    <!-- Load components and interactive logic -->
    <script type="module" src="/docs-web/build/client.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500&family=DM+Mono:ital,wght@0,400;0,500&display=swap"
      rel="stylesheet"
    />

    <!-- Hide body until DSD polyfill runs -->
    <style> body[dsd-pending] { display: none; } </style>
    <!-- If JS is disabled, show contents without polyfill -->
    <noscript>
      <style> body[dsd-pending] { display: block !important; } </style>
    </noscript>
  </head>
  <body dsd-pending>
    <!-- Declarative Shadow DOM polyfill -->
    <script>
      (function() {
        if (!HTMLTemplateElement.prototype.hasOwnProperty('shadowRootMode')) {
          (function attachShadowRoots(root) {
            root.querySelectorAll("template[shadowrootmode]").forEach(template => {
              const mode = template.getAttribute("shadowrootmode");
              const shadowRoot = template.parentNode.attachShadow({ mode });
              shadowRoot.appendChild(template.content);
              template.remove();
              attachShadowRoots(shadowRoot);
            });
          })(document);
        }
        document.body.removeAttribute('dsd-pending');
      })();
    </script>

    <main>
      <sw-toolbar></sw-toolbar>
      {{ content | injectToc(toc) | safe }}
    </main>
  </body>
</html>
